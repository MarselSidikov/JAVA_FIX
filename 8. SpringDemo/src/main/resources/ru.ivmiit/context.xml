<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="ru.ivmiit"/>

    <bean id="independentRenderer" class="ru.ivmiit.IndependentMessageRenderer"/>

    <bean id="renderer" class="ru.ivmiit.MessageRendererStandardImpl">
        <constructor-arg name="message" ref="message"/>
    </bean>

    <bean id="message" class="ru.ivmiit.HelloMessage">
        <constructor-arg name="text" value="Andrey"/>
    </bean>
</beans>